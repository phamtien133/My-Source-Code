{{#section 'title'}}
    Đăng nhập
{{/section}}

{{#section 'css'}}
    <style type="text/css">
        label {
            font-weight: normal !important;
        }
    </style>
{{/section}}

{{#if showError }}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> {{ errorMsg }}
    </div>
{{/if}}

<form class="form-horizontal" method="post" action="" id="frmLogin">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtEmail" placeholder="Email" name="email">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Mật khẩu</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Mật khẩu" name="matkhau">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <label>
                <input type="checkbox" name="remember">
                Ghi nhớ
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">
            <i class="fa fa-check"></i>
            Đăng nhập
            </button>
        </div>
    </div>
</form>