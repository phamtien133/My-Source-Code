{{#section 'css'}}
    <link href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <style type="text/css">
        label {
            font-weight: normal !important;
        }
    </style>
{{/section}}

{{#section 'js'}}
    <script type="text/javascript">
        $('#frmPost').validate({
            rules: {
                name: {
                    required: true
                },
                img: {
                    required: true,
                },
                img2: {
                    required: true,
                },
                img3: {
                    required: true,
                },
                startprice: {
                    required: true
                },
                pricestep: {
                    required: true
                },
                buyprice: {
                    required: false
                },
                productcart: {required: false
                },
                timepost: {
                    required: true
                },
                detal: {
                    required: true
                },
                isAutoUpdate:{required: false

                }
            },

            errorElement: 'span',
            errorClass: 'help-block',

            highlight: function (element) {
                $(element)
                    .closest('.form-group')
                    .addClass('has-error');
            },

            success: function (label) {
                $(label)
                    .closest('.form-group')
                    .removeClass('has-error');

                label.remove();
            },
        });
    </script>
{{/section}}

{{#if showError }}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong> {{ errorMsg }} </strong>
    </div>
{{/if}}

