    <div class="form-group">
        <label for="txtNameProduct" class="col-sm-2 control-label">Tên sản phẩm</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtNameProduct" placeholder="Tên sản phẩm" name="productname">
        </div>
    </div>
    <div class="form-group" >
        <label for="inputImage" class="col-sm-2 control-label">Hình ảnh</label>
        <div class="col-sm-4">
            <input type="file" class="form-control" name="img">
            <input type="file" class="form-control" name="img2">
            <input type="file" class="form-control" name="img3">
        </div>
     </div>
    <div class="form-group">
        <label for="txtStartPrice" class="col-sm-2 control-label">Giá khởi điểm</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtStartPrice" placeholder="Giá khởi điểm" name="startprice">
        </div>
    </div>
    <div class="form-group">
        <label for="txtProductCart" class="col-sm-2 control-label">Loại danh mục</label>
        <div class="col-sm-4">
            <select class="form-control" id="txtProductCart" name="productcart">
                {{#each layoutModels.categories }}
                <option value="{{DanhMucId}}">{{TenDanhMuc}}</option>
                {{/each}}
             </select>
         </div>
    </div>
    <div class="form-group">
        <label for="txtStep" class="col-sm-2 control-label">Bước giá</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtStep" placeholder="Bước giá" name="pricestep">
        </div>
    </div>
    <div class="form-group">
        <label for="txtBuy" class="col-sm-2 control-label">Giá mua ngay</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtBuy" placeholder="Giá mua ngay" name="buyprice">
        </div>
    </div>
    <div class="form-group">
        <label for="txtTimePost" class="col-sm-2 control-label">Ngày đăng</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtTimePost" name="timepost" value="" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="txtDetail" class="col-sm-2 control-label">Mô tả</label>
        <div class="col-sm-8">
            <textarea name="detal"></textarea>
        </div>
    </div>
    <div class="form-group">>
        <label for="checkAutoUpdate" class="col-sm-4 control-label">
          <input type="checkbox" name="isAutoUpdate" value="1"> Tự động gia hạn
        </label>
        <div class="col-sm-4">
        </div>
    </div>

    <script type="text/javascript">DrawBotBoot();</script>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success" onclick="return ValidBotBoot();" formenctype="multipart/form-data">
            <i class="fa fa-check"></i>
            Đăng
            </button>
        </div>
    </div>
</form>

